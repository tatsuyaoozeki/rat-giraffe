<h1>編集</h1>
<%= form_for(@property) do |f| %>
  <% if @property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@property.errors.count, "error") %> prohibited this article from being saved:</h2>
      <ul>
      <% @property.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <h2>物件登録</h2>
    <div class="property_form">
      <dl class="ed1">
        <dt><%= f.label :"物件名" %></dt>
        <dd><%= f.text_field :property_name %></dd>

        <dt><%= f.label :"賃料" %></dt>
        <dd><%= f.text_field :rent_price %></dd>

        <dt><%= f.label :"住所" %></dt>
        <dd><%= f.text_field :address %></dd>

        <dt><%= f.label :"築年数" %></dt>
        <dd><%= f.text_field :age %></dd>

        <dt><%= f.label :"備考" %></dt>
        <dd><%= f.text_field :remark %></dd>
      </dl>
    </div>
    <%= f.fields_for :stations do |station| %>
    <h3>最寄り駅</h3>
      <div class="station_form">
        <dl>
          <dt><%= station.label :"路線名" %></dt>
          <dd><%= station.text_field :route_name %></dd>

          <dt><%= station.label :"駅名" %></dt>
          <dd><%= station.text_field :station_name %></dd>

          <dt><%= station.label :"徒歩分数" %></dt>
          <dd><%= station.text_field :time_required %></dd>
        </dl>
      </div>
  <% end %>
  <%= f.submit %>
<% end %>
